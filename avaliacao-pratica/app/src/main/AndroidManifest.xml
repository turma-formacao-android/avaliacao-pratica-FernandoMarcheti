<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.turmaformacaocast.avaliacao_pratica" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".ContactsNoteManagerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".controller.activities.ContactsNote"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.activities.ContactsNoteForm"
            android:label="@string/title_activity_contacts_note_form" >
        </activity>
        <activity
            android:name=".controller.activities.PhoneFormActivity"
            android:label="@string/title_activity_phone_form" >
        </activity>
    </application>

</manifest>
